---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;


---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>
	
	<section class="initial" id="preloader">
		<div class="barra"></div>
		<span class="txtbarra">Luis B</span>
	</section>
	<Header/>
	<body>
		<slot />
	</body>
	<Footer/>
</html>
<script>

 import "../javascript/scripts.js";


</script>


<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif !important;
		background: #13151a;
		background-size: 224px;
		color-scheme: dark light;
		overflow: hidden;
		scroll-behavior: smooth;

	}
	.initial {
    position: absolute;
    z-index: 3;
    top: 0;
    right: 0;
    width: 100vw;
    height: 100vh;
    background-color: white;
    opacity: 1; /* Agregar inicialmente la opacidad completa */
    animation: initial-animation 2s forwards; /* Use "forwards" para mantener el estado final de la animación */
}

@keyframes initial-animation {
    0% {
        opacity: 1; /* Comienza completamente visible */
    }
    90% {
        opacity: 1; /* Permanece visible durante la mayor parte de la animación */
    }
    100% {
        opacity: 0; /* Se desvanece al final de la animación */
        visibility: hidden; /* Opcional: oculta el elemento */
    }
}
	
	.barra{
		z-index: 3;
		position: absolute;
		top: 50%;
		right: 50%;
		transform: translate(50%,50%);
		height: 2px;
		width: 200px;
		background-color: black;
		animation: loopinitial 2s normal;
		display: block;
		opacity: 1;

	}

	.txtbarra{
		z-index: 3;
		height: 10px;
		width: 100px;
		top: 45%;
		opacity: 1;
		right: 50%;
		transform: translate(50%,50%);
		color: rgb(0, 0, 0);
		position: absolute;
		text-align: center;
		animation: fade 2s normal;
	}
	
	@keyframes fade {
		from{
			opacity: 1;
		}

		to{
			opacity: 0;
		}
		
	}

	@keyframes loopinitial{
		0%{
			opacity: 1;
			width:  200px;

		}
		75%{
			opacity: 1;
		}
		100%{
			opacity: 0;
			width: 0px

		}

	}
	
</style>../js/scripts.js
